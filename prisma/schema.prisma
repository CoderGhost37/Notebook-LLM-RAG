generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model DataSource {
  id       String     @id @default(cuid())
  name     String
  type     SourceType
  fileType FileType
  url      String?
  text     String?
  status   String
  addedAt  DateTime   @default(now())
  chunks   Int?
}

enum FileType {
  pdf
  csv
  docx
}

enum SourceType {
  file
  url
  text
}

enum Status {
  processing
  ready
  error
}
